<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DicodingStory" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/custom_purple_500</item>
        <item name="colorPrimaryVariant">@color/custom_purple_700</item>
        <item name="colorOnPrimary">@color/custom_purple_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/custom_dark_purple_200</item>
        <item name="colorSecondaryVariant">@color/custom_dark_purple_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.AppCompat.Title.Form">
        <item name="color">?attr/colorSecondaryVariant</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.AppCompat.EditText.AuthEditText">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">@drawable/custom_edit_text_background</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Widget.MaterialComponents.ShapeableImageView.Story">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Story</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.Story" parent="">
        <item name="cornerSize">4%</item>
    </style>

    <style name="Widget.MaterialComponents.CardView.Story">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="TextAppearance.AppCompat.UserName">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>